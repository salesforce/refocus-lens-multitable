<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content bg-inverse">
        <div class="modal-header">
            <button type="button" class="close bg-inverse" data-dismiss="modal" aria-label="{{close.label}}"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{data.name}}</h4>
        </div><!-- modal-header -->
        <div class="modal-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-8"><!-- Left Column -->
                        <h5>{{heading.tags}}</h5>
                        <p>
                            {{#if data.aspect.tags}}
                                {{#each data.aspect.tags}}
                                    <span style="margin-right: 8px;"
                                          class="label label-pill label-default tag">
                                        {{this}}
                                    </span>
                                {{else}}{{/each}}
                            {{/if}}
                        </p>
                        <h5>{{heading.lastUpdated}}</h5>
                        <p>{{data.updatedAtFormatted}}</p>
                        <h5>{{heading.status}}</h5>
                        <p>
                            <span class="box status-{{data.status}}">&nbsp;</span>
                            <span>{{data.status}}</span>
                            <span class="small">since {{data.statusChangedAtFormatted}}</span>
                        </p>
                        <h5>{{heading.value}}</h5>
                        <p>{{data.value}} {{#if data.aspect.valueLabel}}{{data.aspect.valueLabel}}{{/if}}</p>
                        <h5>{{heading.messageCode}}</h5>
                        <p>{{data.messageCode}}</p>
                        <h5>{{heading.messageBody}}</h5>
                        <p>{{multiline data.messageBody}}</p>
                        <h5>{{heading.description}}</h5>
                        <p>{{data.aspect.description}}</p>
                    </div><!-- col-xs-8 -->
                    <div class="col-xs-4"><!-- Right Column -->
                        <h5>{{heading.sampleRelatedLinks}}</h5>
                        <div class="list-group sample-related-links">
                            {{#if data.relatedLinks}}
                                {{#each data.relatedLinks}}
                                    <a class="list-group-item" target="_blank" rel="noopener noreferrer" style="padding: .25rem 0.75rem" href="{{url}}">{{name}}</a>
                                {{else}}{{/each}}
                            {{/if}}
                        </div>

                        <h5>{{heading.help}}</h5>
                        <div class="list-group help">
                            {{#if data.aspect.helpUrl}}
                                <a class="list-group-item" target="_blank" rel="noopener noreferrer" href="{{data.aspect.helpUrl}}">{{text.url}}</a>
                            {{else}}
                                <span class="list-group-item">{{text.url}}</span>
                            {{/if}}
                            {{#if data.aspect.helpEmail}}
                                <a class="list-group-item" target="_blank" rel="noopener noreferrer" href="mailto:{{data.aspect.helpEmail}}">{{text.email}}</a>
                            {{else}}
                                <span class="list-group-item">{{text.email}}</span>
                            {{/if}}
                        </div>

                        <h5>{{heading.aspectRelatedLinks}}</h5>
                        <div class="list-group">
                            {{#if data.aspect.relatedLinks}}
                                {{#each data.aspect.relatedLinks}}
                                    <a class="list-group-item" target="_blank" rel="noopener noreferrer" style="padding: .25rem 0.75rem" href="{{url}}">{{name}}</a>
                                {{else}}{{/each}}
                            {{/if}}
                        </div>
                    </div><!-- col-xs-4 -->
                </div><!-- row -->
            </div><!-- container -->
        </div><!-- modal-body -->
    </div><!-- modal-content -->
</div><!-- modal-dialog -->
